{
  "name": "@leactive/react",
  "version": "0.1.1",
  "description": "LeactiveJS connector for React",
  "main": "cjs/index.js",
  "module": "es/index.js",
  "types": "typescript/index.d.ts",
  "unpkg": "dist/index.min.js",
  "jsdelivr": "dist/index.min.js",
  "files": [
    "dist/*",
    "cjs/*",
    "es/*",
    "flow/*",
    "typescript/*",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "lint": "eslint -c .eslintrc.json src/*",
    "test": "yarn test:types && yarn test:unit",
    "test:watch": "cross-env NODE_ENV=test ava --watch --verbose",
    "test:types": "yarn test:types:flow && yarn test:types:ts",
    "test:types:flow": "flow check",
    "test:types:ts": "tsc -p test/types/typescript/tsconfig.json",
    "test:unit": "cross-env NODE_ENV=test nyc ava --verbose",
    "build": "yarn build:cjs && yarn build:es && yarn build:iife",
    "build:cjs": "cross-env NODE_ENV=cjs babel src --out-dir cjs --copy-files",
    "build:es": "cross-env NODE_ENV=es babel src --out-dir es --copy-files",
    "build:iife": "cross-env NODE_ENV=iife rollup -c -o dist/index.min.js",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "repository": "git+https://github.com/leactive/react.git",
  "keywords": [
    "react",
    "state",
    "manager",
    "reactive"
  ],
  "author": {
    "name": "Eduard Troshin",
    "email": "eazymovcode@gmail.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/leactive/react/issues"
  },
  "homepage": "https://github.com/leactive/react#readme",
  "devDependencies": {
    "@types/react": "^16.0.40",
    "ava": "^0.25.0",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "babel-plugin-istanbul": "^4.1.5",
    "babel-plugin-module-alias": "^1.6.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-es2015-rollup": "^3.0.0",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.24.1",
    "coveralls": "^3.0.0",
    "cross-env": "^5.1.3",
    "eslint": "^4.18.2",
    "eslint-plugin-flowtype": "^2.46.1",
    "eslint-plugin-react": "^7.7.0",
    "flow-bin": "^0.68.0",
    "fs": "^0.0.1-security",
    "husky": "^0.14.3",
    "istanbul": "^0.4.5",
    "nyc": "^11.4.1",
    "path": "^0.12.7",
    "perfy": "^1.1.2",
    "react": "^16.3.2",
    "react-test-renderer": "^16.2.0",
    "rollup": "^0.56.4",
    "rollup-plugin-babel": "^3.0.3",
    "rollup-plugin-node-resolve": "^3.0.3",
    "rollup-plugin-uglify": "^3.0.0",
    "sinon": "^4.4.2",
    "typescript": "^2.7.2",
    "util": "^0.10.3"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "nyc": {
    "require": [
      "babel-core/register"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "ava": {
    "files": [
      "test/unit/**/*.js"
    ],
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  },
  "dependencies": {
    "@leactive/core": "^0.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint & yarn test"
    }
  }
}
